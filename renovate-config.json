{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default renovate configuration",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:daily",
    ":disableDependencyDashboard",
    ":semanticCommits",
    ":label(dependencies)",
    ":timezone(UTC)",
    ":enableVulnerabilityAlerts",
    ":automergeMinor",
    ":automergePr",
    ":prNotPending",
    ":rebaseStalePrs",
    ":separateMajorReleases",
    ":combinePatchMinorReleases"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:daily"
    ]
  },
  "enabledManagers": [
    "npm",
    "composer",
    "github-actions"
  ],
  "platformAutomerge": true,
  "rollbackPrs": true,
  "rangeStrategy": "widen",
  "constraints": {
    "php": "^7.4"
  },
  "packageRules": [
    {
      "matchDepTypes": [
        "require-dev"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "enabled": false
    }
  ]
}
