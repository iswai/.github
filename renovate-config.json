{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default configuration for repositories in the Genetic Consolidated organisation",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:nonOfficeHours",
    ":semanticCommits",
    ":label(dependencies)",
    ":timezone(UTC)",
    ":enableVulnerabilityAlerts",
    ":ignoreModulesAndTests",
    ":automergeMinor",
    ":automergeBranch",
    ":prNotPending",
    ":rebaseStalePrs",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    ":maintainLockFilesWeekly"
  ],
  "enabledManagers": [
    "npm",
    "composer",
    "github-actions"
  ],
  "platformAutomerge": true,
  "rangeStrategy": "widen",
  "rollbackPrs": true,
  "packageRules": [
    {
      "matchDepTypes": [
        "require-dev"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
